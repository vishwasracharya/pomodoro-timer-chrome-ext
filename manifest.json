{
    "manifest_version": 3,
    "name": "Task Pomodoro Timer",
    "version": "1.0",
    "description": "A simple Pomodoro timer to improve productivity.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "notifications"
    ],
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    }
}